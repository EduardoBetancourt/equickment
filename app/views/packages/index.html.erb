
  <div class="row">
    <div class="col-7">
      <div class="package-list">
        <div class="header-package-list">
        <h1>See all our packages</h1>
        <a href="/packages/new" class="add-package">+ Add your own</a>
        </div>
        <% @packages.each do |package| %>
          <%= link_to package_path(package), class:"product-card" do %>
            <div class="card-product">
              <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
              <div class="card-product-infos">
                <h2><%= package.name %></h2>
                <p><%= package.description %></p>
                <h2 class="price-tag">$<%= package.price %></h2>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="col-5">
      <div class="img-map">
        <img id="map-image" src="https://images.unsplash.com/photo-1580715911453-d6d9cffd5771?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=874&q=80">
      </div>
    </div>
  </div>

