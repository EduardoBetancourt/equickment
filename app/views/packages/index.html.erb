  <div class="row">
    <div class="col-7">
      <div class="package-list" id="scrollable">
        <div class="header-package-list">
        <h1>See all our packages</h1>
        <a href="/packages/new" class="add-package">+ Add your own</a>
        </div>
        <% @packages.each do |package| %>
          <%= link_to package_path(package), class:"product-card" do %>
            <div class="card-product">
              <% if package.photos.attached? %>
              <%= cl_image_tag package.photos.first.key, class:"card-img"%>
              <% end %>
              <div class="card-product-infos">
                <h2><%= package.name %></h2>
                <p>Location: <%= package.address %></p>
                <% package.package_categories.each do |package_category| %>
                  <span class="btn btn-sm package-tags">âœ“ <%= package_category.category.name %></span>
                <% end %>
                <h2 class="price-tag">$<%= package.price %></h2>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="col-5">
      <div class="map-image" id="fixed">
        <div id="map"
          style="width: 100%; height: 600px;"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div>
    </div>
  </div>

