<div class="container">
  <div class="row">
    <div class="package-header col-12">
      <h2><%= @package.name %></h2>
      <h2><small>$<%= @package.price %>/<small>day</small></small></h2>
    </div>
  </div>

  <div class="row">
    <div class="carousel col-12 mb-3">
      <img src="https://images.unsplash.com/photo-1499349720341-8d8e523e9bfd?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1500&q=80" alt="">
    </div>
  </div>

  <div class="row">
  <div class="package-details col-8">
    <p> By: <em> <%= @package.user.email %></em></p>
    <p> <%= @package.description %></p>
  </div>

  <div class="booking col-4">
    Book Here
  </div>
  </div>
</div>
